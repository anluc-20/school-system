---
import BooksIcon from "./astro/BooksIcon.astro";
import FacebookIcon from "./astro/FacebookIcon.astro";
import TwitterIcon from "./astro/TwitterIcon.astro";
import UsersIcon from "./astro/UsersIcon.astro";
import NumbersIcon from "./astro/NumbersIcon.astro";
import SettingsIcon from "./astro/SettingsIcon.astro";
import SearchIcon from "./astro/SearchIcon.astro";
import BookIcon from "./astro/BookIcon.astro";
import ClipboardListIcon from "./astro/ClipboardListIcon.astro";
import RouteIcon from "./astro/RouteIcon.astro";
import CirclePlusIcon from "./astro/CirclePlusIcon.astro";

interface Props {
        name: string;
        class?: string;
}

// Define el tipo del mapeo de iconos
const iconMap: Record<string, any> = {
    books: BooksIcon,
    users: UsersIcon,
    facebook: FacebookIcon,
    twitter: TwitterIcon,
    numbers: NumbersIcon,
    settings: SettingsIcon,
    search: SearchIcon,
    book: BookIcon,
    clipboard_list: ClipboardListIcon,
    route: RouteIcon,
    circle_plus: CirclePlusIcon
};


// Usa el tipo IconName para asegurarse de que `Astro.props.name` sea uno de los valores v√°lidos
const IconComponent = iconMap[Astro.props.name];
---

<svg
  {...Astro.props}
  xmlns="http://www.w3.org/2000/svg"
  width="44"
  height="44"
  viewBox="0 0 24 24"
  stroke-width="1.5"
  stroke="currentColor"
  fill="none"
  stroke-linecap="round"
  stroke-linejoin="round"
>
        <IconComponent />
</svg>