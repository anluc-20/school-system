---
interface Props {
	title: string,
	class?: string
}

const {title, class: className} = Astro.props;
---
<div class="card">
	<div
                
	 class= {
		`
			bg-tertiary
			flex justify-center items-center
			rounded-3xl
			border-b-[4px] border-[#0e858b] box-border
			shadow-black/40 shadow-md
			${className}
		`
	 }
	>
                <p class="text-center">{title}</p>
		<slot />
	</div>
</div>
